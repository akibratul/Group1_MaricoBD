<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.maricobd.Ratul.QEnvSafCompController7">

    <children>
        <Label layoutX="160" layoutY="20" style="-fx-font-size: 18;" text="Environmental and Safety Compliance" />

        <!-- Compliance Data -->
        <Label layoutX="50" layoutY="70" text="Waste Disposal:" />
        <TextField fx:id="wasteTF" layoutX="250" layoutY="65" prefWidth="350" />

        <Label layoutX="50" layoutY="110" text="Air Quality:" />
        <TextField fx:id="airTF" layoutX="250" layoutY="105" prefWidth="350" />

        <Label layoutX="50" layoutY="150" text="Safety Incidents:" />
        <TextField fx:id="safetyIncidentsTF" layoutX="250" layoutY="145" prefWidth="350" />

        <!-- Compliance Check Results -->
        <Label layoutX="50" layoutY="200" text="Violations:" />
        <TextField fx:id="violationsTF" layoutX="250" layoutY="195" prefWidth="350" />

        <Label layoutX="50" layoutY="240" text="Corrective Actions:" />
        <TextField fx:id="actionsTF" layoutX="250" layoutY="235" prefWidth="350" />

        <!-- Buttons -->
        <Button defaultButton="true" layoutX="250" layoutY="290" onAction="#validateComplianceOnAction" prefHeight="27.0" prefWidth="131.0" text="Validate Compliance" />
        <Button defaultButton="true" layoutX="410" layoutY="290" onAction="#saveComplianceOnAction" prefHeight="27.0" prefWidth="58.0" text="Save" />
        <Button layoutX="527.0" layoutY="424.0" onAction="#logoutOnAction" prefHeight="37.0" prefWidth="65.0" text="Logout" />

        <Label fx:id="statusLabel" layoutX="250" layoutY="390" style="-fx-text-fill: green;" text="" />
      <Button defaultButton="true" layoutX="52.0" layoutY="21.0" mnemonicParsing="false" onAction="#backonAction" prefHeight="27.0" prefWidth="47.0" text="Back" />
    </children>
</AnchorPane>
