<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.maricobd.Ratul.QEvSupplierPrController5">

    <children>
        <Label layoutX="180" layoutY="20" style="-fx-font-size: 18;" text="Supplier Quality Performance" />

        <!-- Performance Data -->
        <Label layoutX="50" layoutY="70" text="Delivery Time:" />
        <TextField fx:id="deliveryTF" layoutX="250" layoutY="65" prefWidth="350" />

        <Label layoutX="50" layoutY="110" text="Defect Rate:" />
        <TextField fx:id="defectRateTF" layoutX="250" layoutY="105" prefWidth="350" />

        <Label layoutX="50" layoutY="150" text="Compliance Score:" />
        <TextField fx:id="complianceScoreTF" layoutX="250" layoutY="145" prefWidth="350" />

        <!-- Evaluation Results -->
        <Label layoutX="50" layoutY="200" text="Supplier Rating:" />
        <TextField fx:id="ratingTF" layoutX="250" layoutY="195" prefWidth="350" />

        <Label layoutX="50" layoutY="240" text="Feedback:" />
        <TextField fx:id="feedbackTF" layoutX="250" layoutY="235" prefWidth="350" />

        <Label layoutX="50" layoutY="280" text="Improvement Suggestions:" />
        <TextField fx:id="suggestionsTF" layoutX="250" layoutY="275" prefWidth="350" />

        <!-- Buttons -->
        <Button defaultButton="true" layoutX="250" layoutY="330" onAction="#validateEvaluationOnAction" text="Validate Evaluation" />
        <Button layoutX="531.0" layoutY="427.0" onAction="#logoutOnAction" prefHeight="38.0" prefWidth="74.0" style="-fx-background-color: #df3a3a;" text="Logout" textFill="#efefef">
         <font>
            <Font name="System Bold" size="12.0" />
         </font></Button>

        <Label fx:id="statusLabel" layoutX="250" layoutY="380" text="" />
      <Button defaultButton="true" layoutX="51.0" layoutY="21.0" mnemonicParsing="false" onAction="#backonAction" prefHeight="27.0" prefWidth="53.0" text="Back" />
    </children>
</AnchorPane>
